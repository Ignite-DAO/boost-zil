{
  "compilerOptions": {
    "lib": ["es2017"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "target": "es5",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "declaration": true
  },
  "compileOnSave": true,
  "include": [
    "src",
    "src/local-config-maker.ts",
    "./src/binder",
    "./src/testing"
  ]
}
